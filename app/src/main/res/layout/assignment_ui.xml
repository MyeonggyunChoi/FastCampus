<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/page_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        app:layout_constraintLeft_toLeftOf="@id/mainLogo"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/round_rectangle_blue" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo_fb2" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical|right"

            android:text="페이스북 계정으로 로그인"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        app:layout_constraintLeft_toLeftOf="@id/mainLogo"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/round_rectangle_yellow" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo_kt" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical|right"

            android:text="카카오톡 계정으로 로그인"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="250dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@id/mainLogo"
        app:layout_constraintRight_toRightOf="@id/mainLogo"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo"
        android:layout_marginTop="270dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrows"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="회원가입을 건너뛰고 레시피 확인하기"
            android:gravity="center"
            android:textColor="#ACACAC"
            android:textStyle="bold"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/sandwich_bg_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>